<html>
<head>
    <title>add role</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
    <script>
        $(document).ready(function(){
            var oldSortID = $("#oldSortID").val();
            var select_sort = '';
            var sortArray = $("#inUseSortID").val().split(",").map(Number);
            for (var a=1;a<=99;a++){
                if(sortArray.indexOf(a) == -1 || a == oldSortID){
                    if(a == oldSortID){
                        select_sort += '<option val=' + a + ' selected="selected">' + a + '</option>';
                    }else{
                        select_sort += '<option val=' + a + '>' + a + '</option>';
                    }
                }
            }
            $('#sort_select').html(select_sort);

            var roleID,roleName,sortID;
            var select = '';
            var myArray = $("#inUseRoleID").val().split(",").map(Number);
            for (i=1;i<=99;i++){
                if(myArray.indexOf(i) == -1){
                select += '<option val=' + i + '>' + i + '</option>';
                }
            }
            $('#some_select').html(select);

            $("#btSubmit").click(function(){
                roleID=$("#some_select").val();
                roleName=$("#roleName").val();
                sortID=$("#sort_select").val();

                //-----forms validation------------------------------------
                if (roleName == "" ) {
                    alert("ROLE NAME must be filled out");
                    return false;
                }
                var numbers = /[0-99]|\./;
                if (!numbers.test(roleID) || !numbers.test(sortID)) {
                    alert("Role ID or Sort#  must be between 0 and 99 ");
                    return false;
                }
                /*error: function(error){
                    if(error.responseText == 'showAlert')
                        alert("Please enter correct user name and password.");
                    }
                }*/
                //--------------------------------forms validation end-------

                $.post("/roles2/addRole2",{
                    roleID: roleID,
                    roleName: roleName,
                    sortID: sortID
                },function(data){
                    if(data==='done')
                    {
                        alert("login success");
                    }
                    window.location = data.redirect
                }).error(function(error){
                    if(error.responseText == 'showAlert')
                        alert("Role Name already already in use. Choose a different Name")
                });
            });
        });
    </script>
</head>
<body>
<h1><%= title %></h1>

<form action="/dashboard">
    <input type="submit" value="Home"><br>
</form>
<form>
    <label for="sortID"><b>Sort ID:</b></label><br>
    <input type="hidden" id="inUseSortID" value="<%= arraySort %>">
    <select id='sort_select'></select><br><br>

    <label for="roleName"><b>Role Name:</b></label><br>
    <input type="text" id="roleName" size="40" placeholder="ex: Teacher"><br><br>

    <input type="hidden" id="inUseRoleID" value="<%= array %>">

    <% if (userAuthID == 1) {%>
    <label for="roleID"><b>Role ID:</b></label><br>
    <select id='some_select'></select><br><br>
    <% } else { %>
    <select id='some_select' style="display:none;"></select>
    <% } %>

    <% if (aclAddRoles2 == null || aclAddRoles2.checkBoxValue == true) {%>
    <input type="button" id="btSubmit" value="Submit" ><br>
    <% } else { %>
    <input type="button" id="btSubmit" value="Submit" disabled><br>
    <% } %>


</form>
<form action="/roles2/showRoles2">
    <% if (aclAddRoles2 == null || aclAddRoles2.checkBoxValue == true) {%>
    <input type="submit" value="Back" ><br>
    <% } else { %>
    <input type="submit" value="Back" disabled><br>
    <% } %>

</form>
</body>
</html>