<html>
<head>
    <title>self registration</title>
    <link rel='stylesheet' href='/stylesheets/updateUser.css' />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
    <script>

        $(document).ready(function(){
            var selfRegistration_ID,email,pin, confirmPin;
            $("#<%= selfRegistration.id %>").click(function(){
                selfRegistration_ID=$(this).attr('id');
                email=$("#email").val();
                pin=$("#newPin").val();
                confirmPin=$("#confirmPin").val();

                //-----forms validation------------------------------------
                var mailFormat = /^([a-z A-Z 0-9 _\.\-])+\@(([a-z A-Z 0-9\-])+\.)+([a-z A-z 0-9]{2,4})+$/;
                if (!mailFormat.test(email)) {
                    alert("Please input a valid EMAIL address!");
                    return false;
                }
                if (pin != confirmPin) {
                    alert("Pin and Confirm Pin don't match!");
                    return false;
                }
                var pinFormat = /^\d{4}$/;
                if (!pinFormat.test(pin)) {
                    alert("Pin code should be 4 digits ");
                    return false;
                }
                if (!pinFormat.test(confirmPin)) {
                    alert("Confirm Pin code should be 4 digits ");
                    return false;
                }
                if (pin != confirmPin) {
                    alert("Pin and Confirm Pin don't match!");
                    return false;
                }
                //--------------------------------forms validation end-------

                $.post("/parentsSelfRegistration/defaultForm",{
                    selfRegistrationToUpdate: selfRegistration_ID,
                    email: email,
                    pin: pin

                },function(data){
                    if(data==='done')
                    {
                        alert("login success");
                    }
                    window.location = data.redirect
                }).error(function(error){
                    if(error.responseText == 'showAlert')
                        alert("Email already in use. Choose a different email.")
                });
            });
        });
    </script>
</head>
<body>
<h1><%= title %></h1>
<form action="/dashboard">
    <input type="submit" value="Home"><br>
</form>
<form>

    <label for="email"><b>Email:</b></label><br>
    <input type="email" id="email" size="40" value="<%= selfRegistration.email %>"><br><br>

    <label for="pin"><b>Pin:</b></label><br>
    <input type="newPin" id="newPin" size="5" value="<%= selfRegistration.pin %>"><br><br>

    <label for="pin"><b>Confirm Pin:</b></label><br>
    <input type="confirmPin" id="confirmPin" size="5" value="<%= selfRegistration.pin %>"><br><br>


    <% if (aclModifyUsers == null || aclModifyUsers.checkBoxValue == true) {%>
    <input type="button" id="<%= selfRegistration.id %>" value="Submit" ><br>
    <% } else { %>
    <input type="button" id="<%= selfRegistration.id %>" value="Submit" disabled><br>
    <% } %>

</form>
<form action="/users/showUsers">
    <input type="submit" value="Back">
</form>

</body>
</html>