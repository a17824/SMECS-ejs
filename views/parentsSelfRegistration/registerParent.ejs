<html>
<head>
    <title>register parent</title>
    <link rel='stylesheet' href='/stylesheets/updateUser.css' />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
    <script>

        var choices;
        function selectUser(select)
        {
            var option = $("#dataList").val();
            //get datalist data-value to value2send
            var value2send= document.querySelector('#students option[value="'+option+'"]').dataset.value;

                var ul = select.parentNode.getElementsByTagName('ul')[0];
                choices = ul.getElementsByTagName('input');

                for (var i = 0; i < choices.length; i++) {

                    if (choices[i].value == value2send) {
                        return;
                    }
                }
                var li = document.createElement('li');
                var input = document.createElement('input');
                var text = document.createTextNode(option);

                input.type = 'hidden';
                input.name = 'users[]';
                input.value = value2send;

                li.appendChild(input);
                li.appendChild(text);
                li.setAttribute('onclick', 'this.parentNode.removeChild(this);');

                ul.appendChild(li);


        }
        var usersToRemove = [];
        function removeUser(user){
            var choice = user.getElementsByTagName('input');
            usersToRemove.push(choice[0].value);
        }


        $(document).ready(function(){
            var newPhoto;
            var pathPhoto;


            var userID,firstName,lastName,email,newPin,confirmPin;
            $("#<%= user.id %>").click(function(){
                userID=$(this).attr('id');
                firstName=$("#firstName").val();
                lastName=$("#lastName").val();
                email=$("#email").val();
                newPin=$("#newPin").val();
                confirmPin=$("#confirmPin").val();



                var arrayUsers = [];
                if (choices === undefined){
                    arrayUsers = $("#savedValueSmecsUsers").val().split(",");
                    for (var a = 0; a < usersToRemove.length; a++) {
                        for (var i = 0; i < arrayUsers.length; i++) {
                            if (usersToRemove[a] == arrayUsers[i]){
                                arrayUsers.splice(i, 1);
                            }
                        }
                    }
                } else {
                    if(choices.length > 0) {
                        for (var a = 0; a < choices.length; a++) {
                            arrayUsers.push(choices[a].value);
                        }
                    }
                }

                if(arrayUsers.length == 1 && arrayUsers[0] == "") {
                    var index = arrayUsers.indexOf(5);
                    arrayUsers.splice(index, 1);
                }



                    //-----forms validation------------------------------------
                if (firstName == "" ) {
                    alert("FIRST NAME must be filled out");
                    return false;
                }
                if (lastName == "" ) {
                    alert("LAST NAME must be filled out");
                    return false;
                }
                var mailFormat = /^([a-z A-Z 0-9 _\.\-])+\@(([a-z A-Z 0-9\-])+\.)+([a-z A-z 0-9]{2,4})+$/;
                if (!mailFormat.test(email)) {
                    alert("Please input a valid EMAIL address!");
                    return false;
                }
                if (newPin != confirmPin) {
                    alert("Pin and Confirm Pin don't match!");
                    return false;
                }
                var pinFormat = /^\d{4}$/;
                if (!pinFormat.test(newPin)) {
                    alert("Pin code should be 4 digits ");
                    return false;
                }
                if (!pinFormat.test(confirmPin)) {
                    alert("Confirm Pin code should be 4 digits ");
                    return false;
                }
                if (newPin != confirmPin) {
                    alert("Pin and Confirm Pin don't match!");
                    return false;
                }
                if (firstName == "" ) {
                    alert("FIRST NAME must be filled out");
                    return false;
                }
                if (lastName == "" ) {
                    alert("LAST NAME must be filled out");
                    return false;
                }
                if (arrayUsers.length < 1) {
                    alert("Parent Role is checked. Please choose a student that belong to this parent or uncheck Parent Role from this user.");
                    return false;
                }
                //--------------------------------forms validation end-------

                $.post("/parentsSelfRegistration/registerParent", {
                    userToUpdate: userID,
                    firstName: firstName,
                    lastName: lastName,
                    email: email,
                    pin: newPin,
                    parentOf: arrayUsers,
                    pathPhoto: pathPhoto,
                    newPhoto: newPhoto

                },function(data){
                    if(data==='done')
                    {
                        alert("login success");
                    }
                    window.location = data.redirect
                }).error(function (error) {
                    if (error.responseText == 'showAlert')
                        alert("Email already in use. Choose a different Email.")
                });

            });
        });
    </script>
</head>
<body>
<h1><%= title %></h1>


    <hr>
    <label for="userPhoto"><b>User Photo:</b></label><br>
    <% if (users.photo === '' || users.photo == undefined) {%>
        <img id="blah" style="border: 1px solid #ddd; border-radius: 4px; padding: 5px;" src="/photosNotAvailable/photoNotAvailable.bmp" alt="your image" /><br><br>
    <% } else { %>
        <img id="blah" style="border: 1px solid #ddd; border-radius: 4px; padding: 5px;" src="/photosUsers/<%= users.photo %>" /><br><br>
    <% } %>

        <a href="/users/addPhoto/<%= users.id %>"><button>Change</button></a>
<br>
<br>

<form>
    <hr>
    <label for="userCredentials"><b>User Email/pin:</b></label><br>
    <div id="checkboxRadioboxDiv" class="checkboxRadioboxDiv">
        First Name:
        <input type="text" id="firstName" placeholder="ex: Manuel" value="<%= users.firstName %>"><br>
        Last Name:
        <input type="text" id="lastName" placeholder="ex: Neves" value="<%= users.lastName %>"><br>
        Email:&nbsp
        <input type="email" id="email" size="40" placeholder="ex: Manuel.Neves@gmail.com" value="<%= users.email %>"><br>
        Pin:&nbsp
        <input type="password" id="newPin" size="40" placeholder="ex: 1234" value="<%= users.pin %>"><br>
        Confirm Pin:&nbsp
        <input type="password" id="confirmPin" size="40" value="<%= users.pin %>"><br>




    </div>
    <hr>


        <div id="labelsDiv2" class="labelsDiv2">
            <div id="smecsUserDiv" class="enable">
                <label for="smecsUserLabel" id="smecsUserLabel" class="enable">Parent of:</label><br>


                <ul id="smecsUserUl" class="enable">
                    <% for (var a = 0; a < users.parentOf.length; a++) { %>

                    <li id="user1" onclick="this.parentNode.removeChild(this); removeUser(this)">
                        <input type="hidden" name="users[]" value="<%= users.parentOf[a].studentID %>" />
                        <%= users.parentOf[a].studentFirstName %> <%= users.parentOf[a].studentLastName %>
                    </li>
                    <% } %>

                </ul>

                <input
                        class="enable"
                        id="dataList" list="students"
                        name="student"
                        placeholder="type student name"
                        value="<%= students.studentID %>"
                        onkeydown = "return (event.keyCode!=13);" onchange="selectUser(this);">
                <dataList id="students">
                    <% students.forEach(function(student) { %>
                    <option data-value="<%= student.studentID %>" value="<%= student.firstName %> <%= student.lastName %>"></option>
                    <% }); %>
                </dataList>

                <img id="imgAdd" class="enable" src="/miscPictures/add.png" alt="Add" style="vertical-align: middle;" onclick="selectUser($(this).prev().get(0));">
                <br><br>

            </div>
        </div>





    <input type="button" id=<%= users.id %> value="Submit" ><br>


</form>
<form action="/login">
    <input type="submit" value="Back" ><br>
</form>

</body>
</html>