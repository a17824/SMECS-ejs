                    <% }  %>
                <% } %>
            <% } %>
        <% }); %>

        <div id="labelsDiv2" class="labelsDiv2">
            <div id="smecsUserDiv" class="enable">
                <label for="smecsUserLabel" id="smecsUserLabel" class="enable">Parent of:</label><br>
                <ul id="smecsUserUl" class="enable">
                    <% for (var a = 0; a < users.parentOf.length; a++) { %>

                    <li id="user1" onclick="this.parentNode.removeChild(this); removeUser(this)">
                        <input type="hidden" name="users[]" value="<%= users.parentOf[a].studentID %>" />
                        <%= users.parentOf[a].studentFirstName %> <%= users.parentOf[a].studentLastName %>
                    </li>
                    <% } %>
                </ul>
                <input
                        class="enable"
                        id="dataList" list="students"
                        name="student"
                        placeholder="type student name"
                        value="<%= students.studentID %>"
                        onkeydown = "return (event.keyCode!=13);" onchange="selectUser(this);">
                <dataList id="students">
                    <% students.forEach(function(student) { %>
                    <option data-value="<%= student.studentID %>" value="<%= student.firstName %> <%= student.lastName %>"></option>
                    <% }); %>
                </dataList>
                <img id="imgAdd" class="enable" src="/miscPictures/add.png" alt="Add" style="vertical-align: middle;" onclick="selectUser($(this).prev().get(0));">
                <br><br>
                If you want to add a new student to dropdown list <a id="clickHere" class="enable"href="/students/addStudent">click here</a>.
            </div>
        </div>



        <% var check = 0;    %>
        <% roles2.forEach(function(role2) { %>

        <% for (var i=0; i < users.userRoleID.length; i++) { %>
        <%if (role2.roleID == 99) { %>
        <%if (role2.roleID == users.userRoleID[i]) { %>
        <input class="utilityCompany"
               type="checkbox"
               name="checkbox"
               onclick="showMe('div1')"
               value="<%= role2.roleID %>"
               checked><label for="roleName"><%= role2.roleName %></label><br>
        <% check = 1; %>
        <% }  %>
        <% }  %>

        <% } %>
        <% if (check == 0) {%>
        <%if (role2.roleID == 99) { %>
        <input class="utilityCompany"
               type="checkbox"
               name="checkbox"
               onclick="showMe('div1')"
               value="<%= role2.roleID %>"><label for="roleName"><%= role2.roleName %></label><br>
        <% } %>
        <% } %>
        <% }); %>

        <div id="labelsDiv3" class="labelsDiv3">
            Company Name:
            <input type="text"
                   id="companyNameText"
                   size="40"
                   value="<%= users.companyName %>" placeholder="ex: Gas Company" class="disable"><br>
            <div id="div1" style="display:none">
