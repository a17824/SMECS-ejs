        <input type="text" id="lastName"  value="<%= users.lastName %>"><br>
    </div>
    <hr>

    <script>
        //show/hide label for Company contact if user as more than one role
        function showMe(box) {
            var checkedRoles = [];
            $.each($("input[name='checkbox']:checked"), function(){
                checkedRoles.push($(this).val());
            });
            var vis = "none";
            if(checkedRoles.length == 1){
                vis = "block";
            }
            document.getElementById(box).style.display = vis;
        }
        showMe('div1');
