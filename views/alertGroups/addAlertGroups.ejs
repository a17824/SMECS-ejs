<html>
<head>
    <title>add Alert Group</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script>
        $(document).ready(function(){
            var oldSortID = $("#oldSortID").val();
            var select_sort = '';
            var sortArray = $("#inUseSortID").val().split(",").map(Number);
            for (var a=1;a<=99;a++){
                if(sortArray.indexOf(a) == -1 || a == oldSortID){
                    if(a == oldSortID){
                        select_sort += '<option val=' + a + ' selected="selected">' + a + '</option>';
                    }else{
                        select_sort += '<option val=' + a + '>' + a + '</option>';
                    }
                }
            }
            $('#sort_select').html(select_sort);

            var select = '';
            var myArray = $("#inUseAlertGroupID").val().split(",").map(Number);
            for (i=1;i<=99;i++){
                if(myArray.indexOf(i) == -1){
                    select += '<option val=' + i + '>' + i + '</option>';
                }
            }
            $('#some_select').html(select);

            var alertGroupID,alertGroupName,sortID;
            $("#btSubmit").click(function(){
                alertGroupID=$("#some_select").val();
                alertGroupName=$("#alertGroupName").val();
                sortID=$("#sort_select").val();

                //-----forms validation------------------------------------
                if (alertGroupName == "" ) {
                    alert("Alert Group NAME must be filled out");
                    return false;
                }
                var numbers = /[0-99]|\./;
                if (!numbers.test(alertGroupID)) {
                    alert("Alert Group ID must be between 0 and 99 ");
                    return false;
                }
                //--------------------------------forms validation end-------

                $.post("http://localhost:3000/alertGroups/addAlertGroups",{
                    alertGroupID: alertGroupID,
                    alertGroupName: alertGroupName,
                    sortID: sortID
                },function(data){
                    if(data==='done')
                    {
                        alert("login success");
                    }
                    window.location = data.redirect
                }).error(function(error){
                    if(error.responseText == 'showAlert')
                        alert("Alert Group NAME already in use. Choose a different Name.")
                });
            });
        });
    </script>
</head>
<body>
<h1><%= title %></h1>
<form action="/dashboard">
    <input type="submit" value="Home"><br>
</form>
<form>



    <label for="alertGroupName"><b>Alert Group Name:</b></label><br>
    <input type="text" id="alertGroupName" size="40" placeholder="ex: Red" ><br><br>

    <input type="hidden" id="inUseAlertGroupID" value="<%= array %>">

    <label for="sortID"><b>Sort ID:</b></label><br>
    <input type="hidden" id="inUseSortID" value="<%= arraySort %>">
    <select id='sort_select'></select><br><br>

    <% if (userAuthID == 1) {%>
    <label for="alertGroupID"><b>Alert Group ID:</b></label><br>
    <select id='some_select'></select><br><br>
    <% } else { %>
    <select id='some_select' style="display:none;"></select>
    <% } %>


    <% if (aclAddAlertGroup == null || aclAddAlertGroup.checkBoxValue == true) {%>
    <input type="button" id="btSubmit" value="Submit" ><br>
    <% } else { %>
    <input type="button" id="btSubmit" value="Submit" disabled><br>
    <% } %>

</form>
<form action="/alertGroups/showAlertGroups">
    <% if (aclShowAlertGroups == null || aclShowAlertGroups.checkBoxValue == true) {%>
    <input type="submit" value="Back">
    <% } else { %>
    <input type="submit" value="Back" disabled>
    <% } %>

</form>
</body>
</html>