    <script>
        function validateFileType(putImg){
            let fileName = document.getElementById("newPhoto").value;
            let idxDot = fileName.lastIndexOf(".") + 1;
            let extFile = fileName.substr(idxDot, fileName.length).toLowerCase();
            if (extFile=="jpg" || extFile=="png"){
                document.getElementById('blah').src = window.URL.createObjectURL(putImg.files[0])
            }else{
                document.getElementById('newPhoto').value = '';
                alert("Only jpg and png files are allowed!");

            }
        }

        $(document).ready(function(){
