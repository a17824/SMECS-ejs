        <!-- page content -->

        <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3>Floor Plan</h3>
                    </div>


                </div>
                <div class="clearfix"></div>

                <div class="row">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2><small>Add/change floor plan</small></h2>
                                <div class="clearfix"></div>
                            </div>



                            <div class="x_content">

                                <!-- Back button -->
                                <div class="centered-text">
                                    <% if(iPad){ %>
                                        <div class="moveLittleRight2">
                                            <a href="/buildingFloorRoom/show" class="pull-bottom_Back"><button class="btn btn-default">Cancel</button></a>
                                        </div>
                                    <% }else { %>
                                        <div class="moveLittleRight3">
                                            <a href="/buildingFloorRoom/show" class="pull-bottom_Back2"><button class="btn btn-default">Cancel</button></a>
                                        </div>
                                    <% } %>
                                </div>

                                <form action="/floor/addFloorPlan/:id" enctype="multipart/form-data" method="post">
                                    <input name="<%= floor.id %>" type="hidden"/>
                                    <div class="divChooseBigger center-block">
                                        <% if (floor.floorPlan === '' || floor.floorPlan == undefined) {%>
                                            <img id="blah" class="imgChooseNew" src="/photosNotAvailable/floorPlan-notAvailableWeb.jpg" alt="your image" /><br><br>
                                        <% } else { %>
                                            <img id="blah" class="imgChooseNew" src="/floorPlans/<%= floor.floorPlan %>" /><br><br>
                                        <% } %>
                                        <input type="file"
                                               class="imgChooseNew"
                                               onchange="validateFileType(this)"
                                               name="upload"
                                               id="newPhoto"
                                               single="single"
                                               accept=".png, .jpg" required/><br>
                                            <script type="text/javascript">

                                            </script>
                                    </div>

                                    <br><br><br><br><br><br><br><br><br>
                                    <div class="ln_solid"></div>
                                    <div class="centered-text">
                                        <div class="moveLittleRight">
                                            <input type="submit" value="Save" class="btn btn-success">
                                        </div>
                                    </div>
