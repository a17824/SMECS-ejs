<html>
<head>
    <title>update student</title>
    <link rel='stylesheet' href='/stylesheets/updateUser.css' />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
    <script>
        var choices;
        function selectUser(select) {
            var option = $("#dataList").val();
            //get datalist data-value to value2send
            var value2send= document.querySelector('#students option[value="'+option+'"]').dataset.value;
            var ul = select.parentNode.getElementsByTagName('ul')[0];
            choices = ul.getElementsByTagName('input');
            for (var i = 0; i < choices.length; i++) {
                if (choices[i].value == value2send) {
                    return;
                }
            }
            var li = document.createElement('li');
            var input = document.createElement('input');
            var text = document.createTextNode(option);
            input.type = 'hidden';
            input.name = 'users[]';
            input.value = value2send;
            li.appendChild(input);
            li.appendChild(text);
            li.setAttribute('onclick', 'this.parentNode.removeChild(this);');
            ul.appendChild(li);
        }
        var usersToRemove = [];
        function removeUser(user){
            var choice = user.getElementsByTagName('input');
            usersToRemove.push(choice[0].value);
        }

        $(document).ready(function(){
            var student_ID,firstName,lastName,studentID,photo,busRide;
            $("#<%= students.id %>").click(function(){
                student_ID=$(this).attr('id');
                firstName=$("#firstName").val();
                lastName=$("#lastName").val();
                studentID=$("#studentID").val();
                photo=$("#photo").val();
                busRide = document.getElementById("checkbox").checked;

                var arrayUsers = [];
                if (choices === undefined){
                    arrayUsers = $("#savedValueSmecsUsers").val().split(",");
                    for (var a = 0; a < usersToRemove.length; a++) {
                        for (var i = 0; i < arrayUsers.length; i++) {
                            if (usersToRemove[a] == arrayUsers[i]){
                                arrayUsers.splice(i, 1);
                            }
                        }
                    }
                } else {
                    if(choices.length > 0) {
                        for (var a = 0; a < choices.length; a++) {
                            arrayUsers.push(choices[a].value);
                        }
                    }
                }
                if(arrayUsers.length == 1 && arrayUsers[0] == "") {
                    var index = arrayUsers.indexOf(5);
                    arrayUsers.splice(index, 1);
                }

                //-----forms validation------------------------------------
                if (firstName == "" ) {
                    alert("FIRST NAME must be filled out");
                    return false;
                }
                if (lastName == "" ) {
                    alert("LAST NAME must be filled out");
                    return false;
                }
                //--------------------------------forms validation end-------

                $.post("/students/updateStudent",{
                    studentToUpdate: student_ID,
                    firstName: firstName,
                    lastName: lastName,
                    studentID: studentID,
                    parentOf: arrayUsers,
                    busRide: busRide,
                    photo: photo
                },function(data){
                    if(data==='done')
                    {
                        alert("login success");
                    }
                    window.location = data.redirect
                }).error(function(error){
                    if(error.responseText == 'showAlert')
                        alert("Student ID already in use. Choose a different ID .")
                });
            });
        });
    </script>
</head>
<body>
<h1><%= title %></h1>
<form action="/dashboard">
    <input type="submit" value="Home"><br>
</form>
<form>



    <label for="firstName"><b>First Name:</b></label><br>
    <input type="text" id="firstName" size="40" value="<%= students.firstName %>"><br><br>
    <label for="lastName"><b>Last Name:</b></label><br>
    <input type="text" id="lastName" size="40" value="<%= students.lastName %>"><br><br>
    <label for="studentID"><b>ID:</b></label><br>
    <input type="number" id="studentID" size="40" value="<%= students.studentID %>"><br><br>
    <label for="busRide"><b>Student uses school bus:</b></label>
    <% if (students.busRide == true) {%>
    <input class="checkbox" type="checkbox" name="checkbox" id=checkbox value="<%= students.busRide %>" checked><br><br>
    <% }else{%>
    <input class="checkbox" type="checkbox" name="checkbox" id=checkbox value="<%= students.busRide %>"><br><br>
    <% } %>
    <input type="hidden" id="savedValueSmecsUsers" value="<%= parentsIdArray %>">
    <input type="hidden" id="photo" value="<%= students.photo %>">

    <label for="parents"><b>Parents:</b>(optional)</label><br>
    <div id="labelsDiv2" class="labelsDiv2">
        <div id="smecsUserDiv" class="enable">
            <label for="smecsUserLabel" id="smecsUserLabel" class="enable">Parents associate to this Student:</label><br>


            <ul id="smecsUserUl" class="enable">
                <% for (var a = 0; a < students.parentOf.length; a++) { %>

                <li id="user1" onclick="this.parentNode.removeChild(this); removeUser(this)">
                    <input type="hidden" name="users[]" value="<%= students.parentOf[a]._id %>" />
                    <%= students.parentOf[a].parentFirstName %> <%= students.parentOf[a].parentLastName %>
                </li>
                <% } %>

            </ul>

            <input
                    class="enable"
                    id="dataList" list="students"
                    name="student"
                    placeholder="type parent name"
                    value="<%= users._id %>"
                    onkeydown = "return (event.keyCode!=13);" onchange="selectUser(this);">
            <dataList id="students">
                <% users.forEach(function(user) { %>
                <option data-value="<%= user._id %>" value="<%= user.firstName %> <%= user.lastName %>"></option>
                <% }); %>
            </dataList>

            <img id="imgAdd" class="enable" src="/miscPictures/add.png" alt="Add" style="vertical-align: middle;" onclick="selectUser($(this).prev().get(0));">
            <br><br>
            If you want to add a new parent to dropdown list <a id="clickHere" class="enable"href="/users/addUserStep1">click here</a>.
        </div>
    </div>



    <% if (aclModifyStudent == null || aclModifyStudent.checkBoxValue == true) {%>
    <input type="button" id="<%= students.id %>" value="Submit" ><br>
    <% } else { %>
    <input type="button" id="<%= students.id %>" value="Submit" disabled><br>
    <% } %>

</form>
<form action="/students/showStudents">
    <input type="submit" value="Back">
</form>

</body>
</html>