<!DOCTYPE html>
<html>
<head>
    <title>Show Utility Users</title>
    <link rel='stylesheet' href='/stylesheets/crudUtilityUsers.css' />


    <link type="text/css" href="/selectMenu/themes/base/jquery.ui.theme.css" rel="stylesheet" />
    <link type="text/css" href="/selectMenu/themes/base/jquery.ui.selectmenu.css" rel="stylesheet" />
    <script type="text/javascript" src="/selectMenu/jquery-1.8.3.js"></script>
    <script type="text/javascript" src="/selectMenu/ui/jquery.ui.core.js"></script>
    <script type="text/javascript" src="/selectMenu/ui/jquery.ui.widget.js"></script>
    <script type="text/javascript" src="/selectMenu/ui/jquery.ui.position.js"></script>
    <script type="text/javascript" src="/selectMenu/ui/jquery.ui.selectmenu.js"></script>


    <script type = "text/javascript">

        var choices;
        function selectUser(select)
        {
            var option = select.options[select.selectedIndex];
            var ul = select.parentNode.getElementsByTagName('ul')[0];
            choices = ul.getElementsByTagName('input');

            var arr = option.value.split("_|_").map(function (val){
                return val
            });

            for (var i = 0; i < choices.length; i++) {
                if (choices[i].value == arr[0]){
                    return;
                }
            }

            var text1a = 'Company: ';
            var text1b = arr[1];
            var text2a = 'Contact: ';
            var text2b = arr[2];
            var text3a = 'Email: ';
            var text3b = arr[0];

            var li = document.createElement('li');
            var input = document.createElement('input');
            var lineBreak = document.createElement('br');
            var lineBreak2 = document.createElement('br');
            var span1 = document.createElement('span');
            var span2 = document.createElement('span');
            var span3 = document.createElement('span');

            var textA1 = document.createTextNode(text1a);
            var textA2 = document.createTextNode(text1b);
            var textB1 = document.createTextNode(text2a);
            var textB2 = document.createTextNode(text2b);
            var textC1 = document.createTextNode(text3a);
            var textC2 = document.createTextNode(text3b);

            span1.setAttribute('class', 'fontColor');
            span1.appendChild(textA1);
            span2.setAttribute('class', 'fontColor');
            span2.appendChild(textB1);
            span3.setAttribute('class', 'fontColor');
            span3.appendChild(textC1);

            input.type = 'hidden';
            input.name = 'users[]';
            input.value = arr[0];

            li.appendChild(input);
            li.appendChild(span1);
            li.appendChild(textA2);
            li.appendChild(lineBreak);
            li.appendChild(span2);
            li.appendChild(textB2);
            li.appendChild(lineBreak2);
            li.appendChild(span3);
            li.appendChild(textC2);

            li.setAttribute('onclick', 'this.parentNode.removeChild(this);');

            ul.appendChild(li);
        }
        var usersToRemove = [];
        function removeUser(user){
            var choice = user.getElementsByTagName('input');
            //console.log(choice[0].value);
            usersToRemove.push(choice[0].value);
        }

        $(document).ready(function()
                {
                    var utility_ID;
                    $("#<%= utility.id %>").click(function(){
                        utility_ID=$(this).attr('id');
                        var arrayUsers = [];
                        if (choices === undefined){
                            arrayUsers = $("#savedValueSmecsUsers").val().split(",");
                            for (var a = 0; a < usersToRemove.length; a++) {
                                for (var i = 0; i < arrayUsers.length; i++) {
                                    if (usersToRemove[a] == arrayUsers[i]){
                                        arrayUsers.splice(i, 1);
                                    }
                                }
                            }

                        } else {
                            if(choices.length > 0) {
                                for (var a = 0; a < choices.length; a++) {
                                    arrayUsers.push(choices[a].value);
                                }
                            }
                        }

                        $.post("/utilities/users",{
                            utilityToUpdate: utility_ID,
                            smecsUsers: arrayUsers

                        },function(data){
                            if(data==='done')
                            {
                                alert("login success");
                            }
                            window.location = data.redirect
                        })
                    });
                }
        );
    </script>
    <style type="text/css">
        /* demo styles */
        body {font-size: 72.5%; font-family:"Verdana",sans-serif; }
    </style>
    <script type="text/javascript">
        $(function(){
            $('select#speedD').selectmenu({
                menuWidth: 400,
                format: addressFormatting
            });
        });

        //a custom format option callback
        var addressFormatting = function(text, opt){
            var newText = text;
            //array of find replaces
            var findreps = [
                {find:/^([^\-]+) \- /g, rep: '<span style="color: #46A" class="ui-selectmenu-item-header">$1</span>'},
                {find:/([^\|><]+) \| /g, rep: '<span style="color: #46A" class="ui-selectmenu-item-content">$1</span>'},
                {find:/([^\|><\(\)]+) (\()/g, rep: '<span  class="ui-selectmenu-item-content">$1</span>$2'},
                {find:/([^\|><\(\)]+)$/g, rep: '<span style="color: #46A" class="ui-selectmenu-item-content">$1</span>'},
                {find:/(\([^\|><]+\))$/g, rep: '<span class="ui-selectmenu-item-footer">$1</span>'}
            ];

            for(var i in findreps){
                newText = newText.replace(findreps[i].find, findreps[i].rep);
            }
            return newText;
        }
    </script>
</head>
<body>
<h1><%= title %></h1>
<div id="smecsUserDiv" class="enable">
    <label for="smecsUserLabel" id="smecsUserLabel" class="enable">SMECS users to login:</label><br>

    <ul id="smecsUserUl" class="enable">
        <% for (var a = 0; a < utility.smecsUsers.length; a++) { %>
        <% allUtilUsers.forEach(function(user) { %>
        <% if (user.email == utility.smecsUsers[a]) {%>
        <li id="user1" onclick="this.parentNode.removeChild(this); removeUser(this)">
            <input type="hidden" name="users[]" value="<%= utility.smecsUsers[a] %>" />
            <span class="fontColor">Company:</span> <%= user.companyName %><br>
            <span class="fontColor">Contact:</span> <%= user.contactName %><br>
            <span class="fontColor">Email:</span> <%= user.email %>
        </li>
        <% } %>
        <% }); %>
        <% } %>

    </ul>


    <select name="speedD" id="speedD" class="enable" id="smecsUserSelect" onchange="selectUser(this);">
        <!–– <option selected disabled hidden> -- select a user -- </option> ––>
        <option disabled selected value> -- select a user from dropdown list -- </option>
        <% allUtilUsers.forEach(function(user) { %>
        <% if (user.softDeleted == null) { %>
        <option value="<%= user.email %>_|_<%= user.companyName %>_|_<%= user.contactName %>" >
            Company: <%= user.companyName %> - Contact: <%= user.contactName %> | Email: <%= user.email %></option>
        <% } %>
        <% }); %>
    </select>
    <img id="imgAdd" class="enable" src="/miscPictures/add.png" alt="Add" style="vertical-align: middle;" onclick="selectUser($(this).prev().get(0));">
    <br><br>
    If you want to insert a new user to dropdown list <a id="clickHere" class="enable"href="/utilities/addUtilitiesUsers">click here</a>.
</div>
<br>

<input type="hidden" id="savedValueSmecsUsers" value="<%= utility.smecsUsers %>">



<br>

<% if (aclModifyUsers == null || aclModifyUsers.checkBoxValue == true) {%>
<input type="button" id="<%= utility.id %>" value="Save" ><br>
<% } else { %>
<input type="button" id="<%= utility.id %>" value="Save" disabled><br>
<% } %>

<div class="main-container">
    <div class="fixer-container">
        <ul class="list-of-floating-elements">
            <form class="floated"></form>
            <form action="/utilities/showUtilities">
                <input type="submit" value="Back">
            </form>
        </ul>
    </div>
</div>
</body>
</html>
