        <% } else { %>
        <input type="submit" value="Utilities Failures" disabled>
        <% } %>
    </form>

    <form action="/medical/showMedical">
        <% if (aclShowMedical == null || aclShowMedical.checkBoxValue == true) {%>
        <input type="submit" value="Medical Emergencies" >
        <% } else { %>
        <input type="submit" value="Medical Emergencies" disabled>
        <% } %>
    </form>

    <% if (showPAUsers == null || showPAUsers.checkBoxValue == true) {%>
    <form action="/pa/showPa">
        <input type="submit" value="PA System" ><br><br>
    </form>
    <% } else { %>
        <% if (aclShowPAPreRecorded == null || aclShowPAPreRecorded.checkBoxValue == true) {%>
            <form action="/pa/showRecorded">
                <input type="submit" value="PA System" ><br><br>
            </form>
        <% } else { %>
            <form action="/pa/showPa">
                <input type="submit" value="PA System" disabled><br><br>
            </form>
        <% } %>
    <% } %>


    <hr>
    <form action="/reports/showReports">
        <% if (aclShowReports == null || aclShowReports.checkBoxValue == true) {%>
        <input type="submit" value="Show Reports" ><br>
        <% } else { %>
        <input type="submit" value="Show Reports" disabled><br>
        <% } %>
    </form>
    <hr>
    <form action="/alerts/sending/chooseAlert">
        <input type="submit" value="Send Alert" ><br><br>
    </form>

    <% utilityUsers.forEach(function(utilityUser) { %>
    <% if (utilityUser.email == userAuthEmail) {%>
    <form action="/reports/requestAssistance">
        <input type="submit" value="Requested Assistance" ><br><br>
    </form>
    <% } %>
    <% }); %>
  </body>
</html>
