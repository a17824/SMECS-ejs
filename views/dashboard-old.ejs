    <form action="/permissionGroups/showPermissionsGroup">
        <% if (aclShowPermissions == null || aclShowPermissions.checkBoxValue == true) {%>
        <input type="submit" value="Show PermissionsGroups" >
        <% } else { %>
        <input type="submit" value="Show PermissionsGroups" disabled>
        <% } %>
    </form>
    <form action="/permissions/showPermissions">
        <% if (aclShowPermissions == null || aclShowPermissions.checkBoxValue == true) {%>
