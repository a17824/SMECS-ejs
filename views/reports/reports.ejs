                                        <li><a onclick="changeStatus('archive','/reports/showReports')">Archive alerts selected</a></li>
                                        <li><a onclick="changeStatus('trash','/reports/showReports')">Trash alerts selected</a></li>
                                        <li class="divider"></li>
                                        <li><a onclick="selectAll()">Select All</a></li>
                                        <li><a onclick="deselectAll()">Deselect All</a></li>
                                    </ul>
                                </div>
                            </th>
                            <th width="60">Date<br>created</th>
                            <th width="60">Time<br>created</th>
                            <th>Alert</th>
                            <th width="50">Real/Drill</th>
                            <th>Sent by</th>
                            <th width="60">Date closed</th>
                            <th width="60">Time closed</th>
                            <th width="60">Status</th>
                            <th width="50">Details</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% reportSent.forEach(function(reportS) { %>
                        <% if (!reportS.archived && !reportS.softDeletedBy) { %>
                        <% if ( reportS.status.statusString == 'open'){ %>
                        <% var color = "#efad4c"  %>
                        <% } else { %>
                        <% var color = "#FFF" %>
                        <% } %>
                        <tr bgcolor= "<%= color %>">

                            <td></td>

                            <td>
                                <% if (aclClearReports == null || aclClearReports.checkBoxValue == true) {%>
                                <input type="checkbox"
                                       name="actionCheckbox"
                                       value="<%= reportS.id %>,<%= reportS.status.statusString %>"
                                       class="icheckbox_flat-green"
                                       style="position: relative; right: -25px">

                                <% } else { %>
                                <input type="checkbox"
                                       name="actionCheckbox"
                                       value="<%= reportS.id %>,<%= reportS.status.statusString %>"
                                       class="icheckbox_flat-green"
                                       style="position: relative; right: -25px"
                                       disabled>
                                <% } %>
                            </td>
                            <td><%= reportS.sentDate %></td>
                            <td><%= reportS.sentTime %></td>
                            <td><%= reportS.alertName %></td>
                            <td>
                                <% if (reportS.testModeON){ %>
                                <a>drill</a>
                                <% } else { %>
                                <a>real</a>
                                <% } %>
                            </td>

                            <td><%= reportS.sentBy %></td>
                            <td><%= reportS.status.statusClosedDate %></td>
                            <td><%= reportS.status.statusClosedTime %></td>
                            <td>
                                <% if ( reportS.status.statusString == 'closed'){ %>
                                <a><%= reportS.status.statusString %></a>
                                <% } else { %>
                                <a>in progress...</a>
                                <% } %>
                            </td>
                            <td><a href="/reports/showReportsDetails/<%= reportS.id %>"><button class="btn btn-info">show</button></a></td>
                        </tr>
                        <% } %>
                        <% }); %>
                        </tbody>
                    </table>



