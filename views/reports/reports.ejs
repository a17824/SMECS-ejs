                    <table id="datatable-buttons" class="table ">
                        <thead>
                        <tr>
                            <th width="10"></th>
                            <th width="50">
                                <div class="input-group-btn">
                                    <button data-toggle="dropdown" class="btn btn-danger dropdown-toggle btn-ms" style="border-radius: 5%" type="button" aria-expanded="false">Action <span class="caret"></span></button>
                                    <ul class="dropdown-menu" role="menu"> <!-- to open dropdown menu box to the left, add this class -> pull-right -->
