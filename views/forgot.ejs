<html>
<head>
    <title>forgot password</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<h1><%= title %></h1>

<% if ( error_messages ) { %>
<p style="color: red"><%= error_messages %></p>
<% } %>
<% if (error || errorMessages) { %>
<p class="error" style="color: red"><%= error %></p>
<p class="messages" style="color: dodgerblue"><%= errorMessages %></p>
<% } %>


<form action="/forgot"  method="post">

    <label for="email"><b>Email:</b></label><br>
    <input type="email" name="email" size="40" placeholder="ex: Manuel.Neves@gmail.com" required="true"><br><br>

    <input type="submit" id="btSubmit" value="Reset Password">

</form>
</body>
</html>
